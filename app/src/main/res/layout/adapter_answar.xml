<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/soccer_cover_rl"
        android:layout_marginBottom="1dp"
        >

<!--        android:background="?android:attr/selectableItemBackground"-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answer_cont_rl"
                android:padding="@dimen/_4sdp"
                android:background="@drawable/search_bg"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:id="@+id/choose_con_rl"
                        android:background="@drawable/normal_bg_solid">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/choose_tv"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="16dp"
                            android:text="A"
                            />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/answer_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>



                <TextView
                    android:id="@+id/soccer_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:text="4500"
                    android:visibility="gone"
                    android:textColor="@color/yallow"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>